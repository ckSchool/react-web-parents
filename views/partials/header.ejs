<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <link rel="stylesheet" href="css/master.css">

  </head>
    <body class="d-flex flex-column">
        <header>
            <nav class="navbar navbar-expand bg-light ml-auto">
                <div class="navbar-nav btn-group rounded w-100" role="group" aria-label="Basic example">
                    <div class="mr-auto">
                        <a class="nav-item btn btn-success mx-1" href="/"><i class="fas fa-home"></i></a>
                        <% if(currentUser){ %>  
                        <a class="nav-item btn btn-success mx-1" href="/students"><i class="fas fa-th-list"></i> Students</a>
                        <% } %>
                    </div>
                    <div>
                        <% if(!currentUser){ %>  
                        <a class="nav-item btn btn-primary" href="/login"><i class="fas fa-sign-in-alt"></i></a>
                        <% } else { %>  
                        <a class="nav-item btn btn-success mx-1" href="/register"><i class="fas fa-user-plus"></i></a>
                        <a class="nav-item btn btn-warning" href="/logout"><i class="fas fa-sign-out-alt"></i></a>
                        <% } %>
                    </div>
                </div>
                <% if(!currentUser){ %>  
                    <span href="#" class="nav-link ml-4 bg-dark" style="color:crimson"><i class="fas fa-user"></i></span>
                <% } else { %>
                    <span href="#" class="nav-link ml-4 bg-dark" style="color:chartreuse"><i class="fas fa-user"></i></span>
                <% } %>
            </nav>

            <div class="container">
                <% if(error && error.length > 0){ %>
                <div class="alert alert-danger my-2" role="alert"><%= error %></div>
                <% } %>
                <% if(success && success.length > 0){ %>
                <div class="alert alert-success my-2" role="alert"><%= success %></div>
                <% } %>
            </div>
        </header>

    <main class="container">